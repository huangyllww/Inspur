#ifdef DEVICES_FORM_SET
  #ifdef FORM_SET_GOTO
      goto VIDEO_FORM_ID,
        prompt = STRING_TOKEN(STR_VIDEO_FORM),
        help = STRING_TOKEN(STR_VIDEO_FORM_HELP);
  #endif

  #ifdef FORM_SET_FORM

    form formid = VIDEO_FORM_ID,
    title = STRING_TOKEN(STR_VIDEO_FORM);

      subtitle text = STRING_TOKEN(STR_COM_EMPTY);
      
      grayoutif FixedPcdGet8(PcdIgdNotPhysicalPresent);
        oneof varid   = SETUP_DATA.VideoPrimaryAdapter,
          prompt      = STRING_TOKEN(STR_VIDEO_PRIMARY_ADAPTER),
          help        = STRING_TOKEN(STR_VIDEO_PRIMARY_ADAPTER_HELP),
          option text = STRING_TOKEN(STR_VIDEO_PRIMARY_PCIE), value = 0, flags = RESET_REQUIRED;
          option text = STRING_TOKEN(STR_VIDEO_PRIMARY_IGD),  value = 1, flags = RESET_REQUIRED;
          option text = STRING_TOKEN(STR_VIDEO_PRIMARY_ALL),  value = 2, flags = RESET_REQUIRED | DEFAULT;
        endoneof;
      endif;  

      subtitle text = STRING_TOKEN(STR_COM_EMPTY);      
      
      suppressif FixedPcdGet8(PcdIgdNotPhysicalPresent);
        text
          help   = STRING_TOKEN(STR_COM_EMPTY),
          text   = STRING_TOKEN(STR_IGD),
          text   = STRING_TOKEN(STR_IGD_NAME);  
      endif;        
        
      text
        help   = STRING_TOKEN(STR_COM_EMPTY),
        text   = STRING_TOKEN(STR_ADDON_GFX),
        text   = STRING_TOKEN(STR_ADDON_GFX_NAME);       
      
    endform;

  #endif  //end, FORM_SET_FORM
#endif  //end, DEVICES_FORM_SET

